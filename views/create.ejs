<body class="d-flex flex-column justify-content-center min-vh-100">
    <!-- <h1 class="text-center">Kids Innovate Africa</h1> -->
    <main class="container-md rounded-3 rounded-5 p-3">
        <div class="row mb-4">
            <h1 class="text-center">Kids Innovate Africa</h1>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-5">
                <img src="./images/Mobile login-bro.png" alt="" class="img-fluid rounded-pill">
            </div>
            <div class="col-md-5 px-5">
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input id="name" type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="surname" class="form-label">Surname</label>
                        <input id="surname" type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input id="email" type="email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="nationality">Nationality</label>
                        <select id="nationality" class="form-select">
                            <option selected>Choose a nationality</option>
                            <option>South Africa</option>
                            <option>Nigeria</option>
                            <option>Zambia</option>
                            <option>Egypt</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <input id="address" type="email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-3">
                                <label for="number" class="form-label">Number</label>
                                <select id="nationality" class="form-select">
                                    <option selected>+789</option>
                                    <option>+27</option>
                                    <option>+1</option>
                                    <option>+46</option>
                                </select>
                            </div>
                            <div class="col-md-9">
                                <label for="number" class="form-label">Number</label>
                                <input id="number" type="text" class="form-control w-100">
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
